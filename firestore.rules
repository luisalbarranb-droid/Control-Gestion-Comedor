
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Aquí está el truco: Si tu email es el tuyo, ERES SUPER ADMIN automáticamente.
    function isSuperUser() {
       return request.auth.token.email == 'arvecladu@gmail.com';
    }

    function isAdmin() {
      // Primero, vemos si eres el superusuario por email. Si es así, tienes permiso.
      if (isSuperUser()) {
        return true;
      }
      // Si no, verificamos si tienes el rol en tu documento de usuario en Firestore.
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && (userData.role == 'admin' || userData.role == 'superadmin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ------------------------------------
    // --- REGLAS SIMPLIFICADAS Y ABIERTAS PARA LA CONFIGURACIÓN INICIAL ---
    // ------------------------------------

    // 1. Usuarios: CUALQUIER usuario autenticado puede leer y escribir.
    // Esto es CRUCIAL para que puedas crear tu propio usuario Superadmin.
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // 2. Tareas: CUALQUIER usuario autenticado puede ver y crear tareas por ahora.
    // Esto corrige el error "list" que tenías.
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // 3. Inventario
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Tú podrás escribir porque tu email está en la función isAdmin.
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 4. Configuración y Áreas
    match /areas/{areaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /configuration/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 5. Asistencia y Evaluaciones (Temporalmente abierto para pruebas)
    match /attendance/{recordId} {
      allow read, write: if isAuthenticated();
    }
    
    match /daysOff/{dayOffId} {
      allow read, write: if isAuthenticated();
    }
    
    match /monthlyEvaluations/{evaluationId} {
      allow read, write: if isAuthenticated();
    }
    
    // El resto de las colecciones solo serán accesibles por un admin.
    match /{document=**} {
       allow read, write: if isAdmin(); 
    }
  }
}
