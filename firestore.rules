
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // TU SALVOCONDUCTO: Si es tu email, eres 'Dios' en la base de datos (Respaldo)
    function isSuperUserByEmail() {
       return request.auth.token.email == 'arvecladu@gmail.com';
    }

    function isAdmin() {
      // Primero, vemos si eres el superusuario por email (llave maestra).
      if (isSuperUserByEmail()) {
        return true;
      }
      // Si no, verificamos si tienes el rol en tu documento de usuario en Firestore.
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && (userData.role == 'admin' || userData.role == 'superadmin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- REGLAS ---

    // 1. USUARIOS (Permitimos que cualquier usuario autenticado pueda leer la lista y crear/editar su propio perfil)
    match /users/{userId} {
      allow create: if isSuperUserByEmail() || isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      allow read: if isAuthenticated(); 
    }

    // 2. TAREAS
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // 3. INVENTARIO
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Regla comod√≠n para desbloquearte totalmente mientras desarrollas
    match /{document=**} {
       allow read, write: if isSuperUserByEmail() || isAdmin(); 
    }
  }
}
