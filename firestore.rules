rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES AUXILIARES ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isSuperUserByEmail() {
       return request.auth.token.email == 'arvecladu@gmail.com' || 
              request.auth.token.email == 'luisalbarranb@gmail.com';
    }

    function isAdmin() {
      return isSuperUserByEmail() || 
             (isAuthenticated() && 
              exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
              (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || 
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'));
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- REGLAS DE COLECCIONES ---

    // 1. USUARIOS
    match /users/{userId} {
      allow create: if isOwner(userId) || isSuperUserByEmail();
      allow update, delete: if isOwner(userId) || isAdmin();
      allow read, list: if isAuthenticated(); 
    }

    // 2. TAREAS
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // 3. INVENTARIO
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 4. MENÚS
    match /menus/{menuId} {
      allow read, write: if isAuthenticated();
    }

    // 5. ASISTENCIA Y PLANIFICACIÓN
    match /attendance/{recordId} {
      allow read, write: if isAuthenticated();
    }
    
    match /daysOff/{dayOffId} {
      allow read, write: if isAuthenticated();
    }

    // 6. EVALUACIONES
    match /evaluationCriteria/{criterionId} {
      allow read, write: if isAdmin();
    }

    match /monthlyEvaluations/{evaluationId} {
      allow read, write: if isAuthenticated();
    }

    // 7. GESTIÓN DE CONTRATOS
    match /contractTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /generatedContracts/{contractId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Regla comodín para super usuarios (solo durante desarrollo)
    match /{document=**} {
       allow read, write: if isSuperUserByEmail() || isAdmin(); 
    }
  }
}
