
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda (Helpers) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getUserRole(userId) {
      // Primero intenta leer desde el documento del usuario.
      // Esto es crucial para el arranque inicial.
      let userData = getUserData(userId);
      if (userData != null && 'role' in userData) {
          return userData.role;
      }
      // Como fallback, podría leer de claims, pero el documento es más confiable para este flujo.
      return null;
    }

    function hasRole(role) {
      let userRole = getUserRole(request.auth.uid);
      return isAuthenticated() && userRole == role;
    }
    
    function isAdmin() {
      let userRole = getUserRole(request.auth.uid);
      return isAuthenticated() && (userRole == 'admin' || userRole == 'superadmin');
    }
    
    function isSuperAdmin() {
      let userRole = getUserRole(request.auth.uid);
      return isAuthenticated() && userRole == 'superadmin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function cannotChange(field) {
      return resource.data[field] == request.resource.data[field];
    }

    // ------------------------------------
    // --- 1. User Data Rules (CRÍTICO) ---
    // ------------------------------------
    match /users/{userId} {
      // Lectura: Dueño del perfil o Admin.
      allow get: if isOwner(userId) || isAdmin();
      
      // MODIFICACIÓN TEMPORAL: Permitir a cualquier usuario logueado listar.
      // Esto es crucial para romper el ciclo inicial de permisos.
      allow list: if isAuthenticated();
      
      // MODIFICACIÓN TEMPORAL: Permitir a CUALQUIER USUARIO AUTENTICADO CREAR.
      // Esto es para poder registrar el primer SuperAdmin.
      allow create: if isAuthenticated();
      
      // Actualización: 
      // 1. Dueño: Solo puede actualizar sus propios datos (y no puede cambiar el rol).
      // 2. Admin/SuperAdmin: Puede actualizar todo.
      allow update: if (isOwner(userId) && cannotChange('role')) || isAdmin();
      
      // Eliminación: Solo SuperAdmin.
      allow delete: if isSuperAdmin();
    }

    // ----------------------------------
    // --- 2. Configuration & Control ---
    // ----------------------------------
    match /areas/{areaId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Solo SuperAdmin puede gestionar áreas
    }

    match /configuration/{configId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Configuración global, solo SuperAdmin.
    }
    
    match /statistics/{period} {
      allow read: if isAdmin();
      // La escritura debe ser desde un backend seguro, pero por ahora solo SuperAdmin.
      allow write: if isSuperAdmin(); 
    }

    // ------------------------------------
    // --- 3. Task Management (MEJORADO)---
    // ------------------------------------
    match /tasks/{taskId} {
      // Lectura: El asignado, el creador, o un admin cuyas áreas incluyan el área de la tarea.
      allow read: if isAuthenticated() && (
          resource.data.assignedTo == request.auth.uid ||
          resource.data.createdBy == request.auth.uid ||
          (hasRole('admin') && getUserData(request.auth.uid).areas.hasAny([resource.data.area])) ||
          isSuperAdmin()
      );
      
      // Creación: Cualquier usuario activo puede crear una tarea.
      allow create: if isAuthenticated();
      
      // Escritura (Update/Delete): Solo el creador de la tarea o un Admin/SuperAdmin.
      allow update, delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ------------------------------
    // --- 4. Inventory & Menus ---
    // ------------------------------
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); 
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    match /menus/{menuId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --------------------------------------
    // --- 5. Attendance & Evaluation ---
    // --------------------------------------
    
    match /attendance/{recordId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    match /daysOff/{dayOffId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    match /evaluationCriteria/{criterionId} {
      allow get, list: if isAdmin();
      allow write: if isSuperAdmin();
    }

    match /monthlyEvaluations/{evaluationId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin(); 
    }
    
    match /peer-reviews/{reviewId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
  }
}
