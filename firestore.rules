rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Simplificado para el desarrollo: cualquier usuario autenticado es tratado como admin.
    // Esto evita problemas con la lectura de roles durante las operaciones de 'list'.
    function isAdmin() {
      return isAuthenticated();
    }
    
    function isSuperAdmin() {
      return isAdmin(); // Para desarrollo, todos los admins son superadmins.
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Simplificado: asume que todos los usuarios autenticados están activos.
    function isActiveUser() {
      return isAuthenticated();
    }
    
    // Validación de datos entrantes
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- User Data Rules ---
    match /users/{userId} {
      // Leer: el propio usuario o admins
      allow get: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Listar: solo admins (ahora cualquier usuario autenticado)
      allow list: if isAdmin();
      
      // Crear: solo superadmins (ahora cualquier usuario autenticado)
      allow create: if isSuperAdmin();
      
      // Actualizar: el propio usuario o un admin
      allow update: if isOwner(userId) || isAdmin();
      
      // Borrar: solo superadmins
      allow delete: if isSuperAdmin();
    }

    // --- Area Management Rules ---
    match /areas/{areaId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Task Management Rules ---
    match /tasks/{taskId} {
      // Leer y escribir para cualquier usuario activo
      allow read, write: if isActiveUser();
    }

    // --- Statistics Rules ---
    match /statistics/{period} {
      allow read, write: if isAdmin();
    }
    
    // --- Configuration Rules ---
    match /configuration/{configId} {
      allow read: if isActiveUser();
      allow write: if isSuperAdmin();
    }

    // --- Inventory Rules ---
    match /inventory/{itemId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }
    
    // --- Menu Rules ---
    match /menus/{menuId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Attendance Rules ---
    match /attendance/{recordId} {
      // Permitir leer y escribir a cualquier usuario autenticado para simplificar
      allow read, write: if isAuthenticated();
    }
    
    match /daysOff/{dayOffId} {
      allow read, write: if isAuthenticated();
    }
    
    // --- Evaluation Criteria Rules ---
    match /evaluationCriteria/{criterionId} {
      // Leer para cualquier usuario autenticado, escribir solo para admins
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // --- Monthly Evaluation Rules ---
    match /monthlyEvaluations/{evaluationId} {
      allow read, write: if isAdmin();
    }
    
    // --- Peer Review Rules ---
    match /peer-reviews/{reviewId} {
      allow read, write: if isAuthenticated();
    }
  }
}
