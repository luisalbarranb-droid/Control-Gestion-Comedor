
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Aquí está el truco: Si tu email es el tuyo, ERES ADMIN automáticamente.
    function isSuperUser() {
       return request.auth.token.email == 'arvecladu@gmail.com';
    }

    function isAdmin() {
      // Eres admin si tienes el rol O si eres el SuperUsuario por email
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && (userData.role == 'admin' || userData.role == 'superadmin' || isSuperUser());
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ------------------------------------
    // --- REGLAS SIMPLIFICADAS ---
    // ------------------------------------

    // 1. Usuarios
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin(); 
    }

    // 2. Tareas (Aquí estaba el error principal)
    // Lo hemos simplificado para que CUALQUIER usuario logueado pueda ver y crear tareas por ahora.
    // Esto corrige el error "list" que tenías.
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // 3. Inventario
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Tú podrás escribir porque tu email está en la función isAdmin
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 4. Configuración y Áreas
    match /areas/{areaId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /configuration/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // 5. Asistencia y Evaluaciones
    match /attendance/{recordId} {
      allow read, write: if isAdmin() || isAuthenticated(); // Temporalmente abierto para pruebas
    }
    
    match /daysOff/{dayOffId} {
      allow read, write: if isAdmin() || isAuthenticated();
    }
    
    match /monthlyEvaluations/{evaluationId} {
      allow read, write: if isAdmin() || isAuthenticated();
    }
    
    // Regla genérica para atrapar colecciones no definidas (útil en desarrollo)
    match /{document=**} {
       allow read, write: if isAdmin(); 
    }
  }
}
