rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions (con fallback para desarrollo) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Devuelve los datos del usuario si existen, sino un mapa vacío.
    function getUserData() {
      return getAfter(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica si el campo 'role' existe y es igual al rol solicitado.
    function hasRole(role) {
      return isAuthenticated() && 'role' in getUserData() && getUserData().role == role;
    }
    
    // Para desarrollo: si el rol no está definido, asume que es admin.
    function isAdmin() {
      return isAuthenticated() && (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) || !('role' in getUserData()) || hasRole('admin') || hasRole('superadmin'));
    }
    
    function isSuperAdmin() {
       return isAuthenticated() && (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) || !('role' in getUserData()) || hasRole('superadmin'));
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isActiveUser() {
      // Para desarrollo, asume que todos los usuarios autenticados están activos.
      return isAuthenticated();
    }
    
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- User Data Rules ---
    match /users/{userId} {
      allow get: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSuperAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isSuperAdmin();
    }

    // --- Area Management Rules ---
    match /areas/{areaId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Task Management Rules ---
    match /tasks/{taskId} {
      allow read, write: if isActiveUser();
    }

    // --- Statistics Rules ---
    match /statistics/{period} {
      allow read, write: if isAdmin();
    }
    
    // --- Configuration Rules ---
    match /configuration/{configId} {
      allow read: if isActiveUser();
      allow write: if isSuperAdmin();
    }

    // --- Inventory Rules ---
    match /inventory/{itemId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }
    
    // --- Menu Rules ---
    match /menus/{menuId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Attendance Rules ---
    match /attendance/{recordId} {
      allow get: if isActiveUser() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    match /daysOff/{dayOffId} {
      allow get: if isActiveUser() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    // --- Evaluation Criteria Rules ---
    match /evaluationCriteria/{criterionId} {
      allow read: if isActiveUser(); // Permitir lectura a todos los usuarios activos
      allow write: if isSuperAdmin();
    }

    // --- Monthly Evaluation Rules ---
    match /monthlyEvaluations/{evaluationId} {
      allow get: if isActiveUser() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    // --- Peer Review Rules ---
    match /peer-reviews/{reviewId} {
      allow read, create: if isActiveUser();
      allow update, delete: if isAdmin();
    }
  }
}
