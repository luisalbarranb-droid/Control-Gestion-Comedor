
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES AUXILIARES ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to get user profile data safely
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperUserByEmail() {
       return request.auth.token.email == 'arvecladu@gmail.com' || 
              request.auth.token.email == 'luisalbarranb@gmail.com';
    }

    function isSuperAdmin() {
      return isAuthenticated() && (isSuperUserByEmail() || getUserProfile().role == 'superadmin');
    }

    function isAdmin() {
      return isAuthenticated() && (isSuperAdmin() || getUserProfile().role == 'admin');
    }

    function getMyComedorId() {
      return getUserProfile().comedorId;
    }

    // --- REGLAS POR COLECCIÓN ---

    // 0. COMEDORES
    match /comedores/{comedorId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // 1. USUARIOS
    match /users/{userId} {
      // Un usuario puede crearse su propio perfil inicial
      allow create: if (isAuthenticated() && request.auth.uid == userId) || isSuperAdmin() || isAdmin();
      // Lectura permitida si es el mismo usuario, si es SuperAdmin, o si es del mismo comedor
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        isSuperAdmin() || 
        (resource.data.comedorId == getMyComedorId())
      );
      allow update, delete: if isSuperAdmin() || (request.auth.uid == userId) || (isAdmin() && resource.data.comedorId == getMyComedorId());
    }

    // 2. COLECCIONES COMEDOR-AWARE (tasks, inventory, menus, attendance, etc.)
    // Usamos un match recursivo o compartido
    
    match /tasks/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /inventory/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /menus/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /attendance/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /daysOff/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /monthlyEvaluations/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /generatedContracts/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /contractTemplates/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }
    match /areas/{id} { allow read, write: if isAuthenticated() && (isSuperAdmin() || (resource.data.comedorId == getMyComedorId() || request.resource.data.comedorId == getMyComedorId())); }

    // Fallback para cualquier otra colección que use comedorId
    match /{anyCollection}/{anyId} {
      allow read, write: if isSuperAdmin() || (isAuthenticated() && resource.data != null && resource.data.comedorId == getMyComedorId());
    }
  }
}
