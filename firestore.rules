
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      // Use get() instead of getAfter() for read operations.
      // Provides a fallback for non-existent user documents during checks.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isAuthenticated() && 'role' in getUserData() && getUserData().role == role;
    }
    
    // Simplified isAdmin check. Explicitly requires the role.
    function isAdmin() {
      return hasRole('admin') || hasRole('superadmin');
    }
    
    function isSuperAdmin() {
       return hasRole('superadmin');
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isActiveUser() {
      return isAuthenticated();
    }
    
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // --- User Data Rules ---
    match /users/{userId} {
      allow get: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow list: if isAdmin(); // ANY authenticated user can list users
      allow create: if isSuperAdmin(); // Only superadmins can create users directly.
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isSuperAdmin();
    }

    // --- Area Management Rules ---
    match /areas/{areaId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Task Management Rules ---
    match /tasks/{taskId} {
      allow read, write: if isActiveUser();
    }

    // --- Statistics Rules ---
    match /statistics/{period} {
      allow read, write: if isAdmin();
    }
    
    // --- Configuration Rules ---
    match /configuration/{configId} {
      allow read: if isActiveUser();
      allow write: if isSuperAdmin();
    }

    // --- Inventory Rules ---
    match /inventory/{itemId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isActiveUser();
      allow write: if isAdmin();
    }
    
    // --- Menu Rules ---
    match /menus/{menuId} {
      allow get, list: if isActiveUser();
      allow write: if isAdmin();
    }

    // --- Attendance Rules ---
    match /attendance/{recordId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if isAdmin();
      // Allow user to read their own records
      allow get: if isActiveUser() && resource.data.userId == request.auth.uid;
    }
    
    match /daysOff/{dayOffId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if isAdmin();
      // Allow user to read their own records
      allow get: if isActiveUser() && resource.data.userId == request.auth.uid;
    }
    
    // --- Evaluation Criteria Rules ---
    match /evaluationCriteria/{criterionId} {
      allow get, list: if isAdmin();
      allow write: if isSuperAdmin();
    }

    // --- Monthly Evaluation Rules ---
    match /monthlyEvaluations/{evaluationId} {
      allow get: if isActiveUser() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }
    
    // --- Peer Review Rules ---
    match /peer-reviews/{reviewId} {
      allow read, create: if isActiveUser();
      allow update, delete: if isAdmin();
    }
  }
}
