
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda (Helpers) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      // Asume que el rol se establece como un Custom Claim en el token.
      return request.auth.token.role;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }
    
    function isAdmin() {
      return hasRole('admin') || hasRole('superadmin');
    }
    
    function isSuperAdmin() {
        return hasRole('superadmin');
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isActiveUser() {
      return isAuthenticated();
    }
    
    // Función para validar que un campo crítico no ha sido modificado
    function cannotChange(field) {
      return resource.data[field] == request.resource.data[field];
    }


    // ------------------------------------
    // --- 1. User Data Rules (CRÍTICO) ---
    // ------------------------------------
    match /users/{userId} {
      // Lectura: Dueño del perfil o Admin.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      
      // Creación: Solo SuperAdmin puede crear nuevas cuentas de usuario.
      allow create: if isSuperAdmin();
      
      // Actualización: 
      // 1. Dueño: Solo puede actualizar sus propios datos (y no puede cambiar el rol).
      // 2. Admin: Puede actualizar todo, incluyendo el rol.
      allow update: if (isOwner(userId) && cannotChange('role')) || isAdmin();
      
      // Eliminación: Solo SuperAdmin.
      allow delete: if isSuperAdmin();
    }

    // ----------------------------------
    // --- 2. Configuration & Control ---
    // ----------------------------------
    match /areas/{areaId} {
      allow read: if isActiveUser();
      allow write: if isAdmin(); // Creación, actualización y eliminación de áreas.
    }

    match /configuration/{configId} {
      allow read: if isActiveUser();
      allow write: if isSuperAdmin(); // Configuración global, solo SuperAdmin.
    }
    
    match /statistics/{period} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin(); // Evitar escritura accidental en estadísticas.
    }

    // ------------------------------------
    // --- 3. Task Management (MEJORADO)---
    // ------------------------------------
    match /tasks/{taskId} {
      // Lectura: Creador, Asignado o Admin.
      allow read: if isAuthenticated() && (resource.data.assignedTo == request.auth.uid || resource.data.createdBy == request.auth.uid || isAdmin());
      
      // Creación: Cualquier usuario activo puede crear una tarea (asumiendo que tiene un campo createdBy).
      allow create: if isAuthenticated();
      
      // Escritura (Update/Delete): Creador de la tarea o Admin.
      allow update, delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ------------------------------
    // --- 4. Inventory & Menus ---
    // ------------------------------
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /menus/{menuId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Permiso de escritura a Admins.
    }

    // --------------------------------------
    // --- 5. Attendance & Evaluation ---
    // --------------------------------------
    
    // Registros de Asistencia
    match /attendance/{recordId} {
      // Lectura: Admin o el dueño del registro.
      allow get: if isAdmin() || (isOwner(resource.data.userId));
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin(); // Solo Admin puede manipular la asistencia.
    }
    
    // Solicitudes de Días Libres
    match /daysOff/{dayOffId} {
      // Lectura: Admin o el dueño de la solicitud.
      allow get: if isAdmin() || (isOwner(resource.data.userId));
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin(); // Solo Admin puede aprobar/manipular.
    }
    
    // Criterios de Evaluación (Configuración)
    match /evaluationCriteria/{criterionId} {
      allow get, list: if isAdmin();
      allow write: if isSuperAdmin(); // Solo SuperAdmin puede definir los criterios.
    }

    // Evaluaciones Mensuales (Resultado)
    match /monthlyEvaluations/{evaluationId} {
      // Lectura: Dueño de la evaluación o Admin.
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin(); // Solo Admin puede crear/modificar resultados.
    }
    
    // Revisiones de Pares
    match /peer-reviews/{reviewId} {
      allow read, create: if isActiveUser(); // Todos pueden leer y crear (submit) reviews.
      allow update, delete: if isAdmin(); // Solo Admins pueden modificar o eliminar una review enviada.
    }
  }
}
