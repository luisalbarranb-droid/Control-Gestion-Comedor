
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'superadmin';
    }

    function isAdminOrHigher() {
      return isSignedIn() && getRole() in ['admin', 'superadmin'];
    }
    
    function isCreator(ownerField) {
      return request.resource.data[ownerField] == request.auth.uid;
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    match /users/{userId} {
      // READ: An admin can read any profile. A user can only read their own.
      allow get: if isSignedIn() && (isOwner(userId) || isAdminOrHigher());
      
      // LIST: Only admins and superadmins can list all users.
      allow list: if isAdminOrHigher();
      
      // WRITE: Only superadmins can create, update, or delete users. A user can update their own name.
      allow create, delete: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isOwner(userId) && request.resource.data.keys().hasOnly(['name', 'lastAccess']));
    }

    match /areas/{areaId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    match /tasks/{taskId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isCreator('creadoPor');
      allow update: if isSignedIn() && (isOwner(resource.data.asignadoA) || isOwner(resource.data.creadoPor) || isAdminOrHigher());
      allow delete: if isSignedIn() && (isOwner(resource.data.creadoPor) || isAdminOrHigher());
    }
    
    match /inventory/{itemId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }
    
    match /menus/{menuId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }

    match /statistics/{period} {
      allow get, list, create, update, delete: if isAdminOrHigher();
    }

    match /configuration/{id} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    function isTaskParticipant(taskId) {
      let taskData = get(/databases/$(database)/documents/tasks/$(taskId)).data;
      return isOwner(taskData.asignadoA) || isOwner(taskData.creadoPor) || isAdminOrHigher();
    }

    match /evidences/{evidenceId} {
      allow get: if isSignedIn() && isTaskParticipant(resource.data.taskId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isCreator('userId') && isTaskParticipant(request.resource.data.taskId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /comments/{commentId} {
      allow get: if isSignedIn() && isTaskParticipant(resource.data.taskId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isCreator('userId') && isTaskParticipant(request.resource.data.taskId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /attendance/{recordId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdminOrHigher());
      allow list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }
    
    match /daysOff/{dayOffId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }
  }
}

    