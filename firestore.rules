
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'superadmin';
    }

    function isAdminOrHigher() {
      return isSignedIn() && getRole() in ['admin', 'superadmin'];
    }
    
    function isCreator(ownerField) {
      return request.resource.data[ownerField] == request.auth.uid;
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    match /users/{userId} {
      // READ: An admin can read any profile. A user can only read their own.
      allow get: if isSignedIn() && (isOwner(userId) || isAdminOrHigher());
      
      // LIST: Only admins and superadmins can list all users.
      allow list: if isAdminOrHigher();
      
      // WRITE: Only superadmins can create, update, or delete users.
      allow create, update, delete: if isSuperAdmin();
    }

    match /areas/{areaId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    match /tasks/{taskId} {
      // Any authenticated user can list tasks (queries will filter them)
      // Any participant (creator, assignee) or admin can get a specific task
      allow get: if isSignedIn() && (get(/databases/$(database)/documents/tasks/$(taskId)).data.asignadoA == request.auth.uid || get(/databases/$(database)/documents/tasks/$(taskId)).data.creadoPor == request.auth.uid || isAdminOrHigher());
      allow list: if isSignedIn();
      // Anyone can create a task, but they must be the creator
      allow create: if isSignedIn() && isCreator('creadoPor');
      // Only participants or admins can update, and creator is immutable
      allow update: if isSignedIn() && (resource.data.asignadoA == request.auth.uid || resource.data.creadoPor == request.auth.uid || isAdminOrHigher()) && request.resource.data.creadoPor == resource.data.creadoPor;
      // Only creator or admin can delete
      allow delete: if isSignedIn() && (resource.data.creadoPor == request.auth.uid || isAdminOrHigher());
    }
    
    match /inventory/{itemId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }
    
    match /menus/{menuId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }

    match /statistics/{period} {
      allow get, list, create, update, delete: if isAdminOrHigher();
    }

    match /configuration/{id} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    function isTaskParticipant(taskId) {
      let taskData = get(/databases/$(database)/documents/tasks/$(taskId)).data;
      return isOwner(taskData.asignadoA) || isOwner(taskData.creadoPor) || isAdminOrHigher();
    }

    match /evidences/{evidenceId} {
      allow get: if isSignedIn() && isTaskParticipant(resource.data.taskId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isCreator('userId') && isTaskParticipant(request.resource.data.taskId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /comments/{commentId} {
      allow get: if isSignedIn() && isTaskParticipant(resource.data.taskId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && isCreator('userId') && isTaskParticipant(request.resource.data.taskId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /attendance/{recordId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdminOrHigher());
      allow list: if isSignedIn(); // Users can only list their own records due to query constraints
      allow create, update, delete: if isAdminOrHigher(); // Only admins can manage records
    }
    
    match /daysOff/{dayOffId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdminOrHigher();
    }
  }
}
