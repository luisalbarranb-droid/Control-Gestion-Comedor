
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // TU SALVOCONDUCTO: Si es tu email, eres 'Dios' en la base de datos
    function isSuperUser() {
       return request.auth.token.email == 'arvecladu@gmail.com';
    }

    function isAdmin() {
      // Primero, vemos si eres el superusuario por email.
      if (isSuperUser()) {
        return true;
      }
      // Si no, verificamos si tienes el rol en tu documento de usuario en Firestore.
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && (userData.role == 'admin' || userData.role == 'superadmin');
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- REGLAS ---

    // 1. USUARIOS (Aquí fallaba)
    match /users/{userId} {
      // Permitimos crear si eres SuperUser O si eres el dueño del ID (para setDoc)
      allow create: if isSuperUser() || isOwner(userId);
      allow update, delete: if isSuperUser() || isOwner(userId);
      allow read: if isAuthenticated(); // Permitir leer usuarios para evitar errores de lista
    }

    // 2. TAREAS
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }

    // 3. INVENTARIO
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Regla comodín para desbloquearte totalmente mientras desarrollas
    match /{document=**} {
       allow read, write: if isSuperUser() || isAdmin(); 
    }
  }
}
