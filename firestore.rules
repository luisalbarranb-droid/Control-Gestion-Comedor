
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda (Helpers) ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      // Asume que el rol se establece como un Custom Claim en el token, pero si no, lo busca en el documento.
      // OJO: La lectura del documento en reglas no es siempre la mejor práctica por costos, pero es útil.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserRole() == role;
    }
    
    function isAdmin() {
      let userRole = getUserRole();
      return isAuthenticated() && (userRole == 'admin' || userRole == 'superadmin');
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'superadmin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function cannotChange(field) {
      return resource.data[field] == request.resource.data[field];
    }


    // ------------------------------------
    // --- 1. User Data Rules (CRÍTICO) ---
    // ------------------------------------
    match /users/{userId} {
      // Lectura: Dueño del perfil o Admin.
      allow get: if isOwner(userId) || isAdmin();
      
      // MODIFICACIÓN TEMPORAL: Permitir a cualquier usuario logueado listar para poder asignar roles.
      // Esto es crucial para romper el ciclo inicial de permisos.
      // Una vez que el SuperAdmin esté configurado, se puede cambiar de nuevo a `if isAdmin()`.
      allow list: if isAuthenticated();
      
      // MODIFICACIÓN TEMPORAL: Permitir a CUALQUIER USUARIO AUTENTICADO CREAR para poder registrar el primer SuperAdmin.
      // Una vez creado, esto DEBERÍA cambiar a `if isSuperAdmin()`.
      allow create: if isAuthenticated();
      
      // Actualización: 
      // 1. Dueño: Solo puede actualizar sus propios datos (y no puede cambiar el rol).
      // 2. Admin/SuperAdmin: Puede actualizar todo, incluyendo el rol.
      allow update: if (isOwner(userId) && cannotChange('role')) || isAdmin();
      
      // Eliminación: Solo SuperAdmin.
      allow delete: if isSuperAdmin();
    }

    // ----------------------------------
    // --- 2. Configuration & Control ---
    // ----------------------------------
    match /areas/{areaId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Solo SuperAdmin puede gestionar áreas
    }

    match /configuration/{configId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin(); // Configuración global, solo SuperAdmin.
    }
    
    match /statistics/{period} {
      allow read: if isAdmin();
      // La escritura debe ser desde un backend seguro, pero por ahora solo SuperAdmin.
      allow write: if isSuperAdmin(); 
    }

    // ------------------------------------
    // --- 3. Task Management (MEJORADO)---
    // ------------------------------------
    match /tasks/{taskId} {
      // Lectura: El asignado, el creador, o un admin cuyas áreas incluyan el área de la tarea.
      allow read: if isAuthenticated() && (
          resource.data.assignedTo == request.auth.uid ||
          resource.data.createdBy == request.auth.uid ||
          (hasRole('admin') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.areas.hasAny([resource.data.area])) ||
          hasRole('superadmin')
      );
      
      // Creación: Cualquier usuario activo puede crear una tarea.
      allow create: if isAuthenticated();
      
      // Escritura (Update/Delete): Solo el creador de la tarea o un Admin/SuperAdmin.
      allow update, delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // ------------------------------
    // --- 4. Inventory & Menus ---
    // ------------------------------
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      // Escritura en inventario solo para administradores.
      allow write: if isAdmin(); 
    }

    match /inventoryTransactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /menus/{menuId} {
      allow read: if isAuthenticated();
      // Admins pueden planificar menús.
      allow write: if isAdmin();
    }

    // --------------------------------------
    // --- 5. Attendance & Evaluation ---
    // --------------------------------------
    
    match /attendance/{recordId} {
      // Lectura: Admin o el dueño del registro.
      allow get: if isAdmin() || (isOwner(resource.data.userId));
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin(); // Solo Admin puede manipular la asistencia.
    }
    
    match /daysOff/{dayOffId} {
      // Lectura: Admin o el dueño de la solicitud.
      allow get: if isAdmin() || (isOwner(resource.data.userId));
      allow list: if isAdmin();
      // Solo Admins pueden gestionar días libres.
      allow create, update, delete: if isAdmin();
    }
    
    match /evaluationCriteria/{criterionId} {
      allow get, list: if isAdmin();
      allow write: if isSuperAdmin(); // Solo SuperAdmin puede definir los criterios.
    }

    match /monthlyEvaluations/{evaluationId} {
      // Lectura: Dueño de la evaluación o Admin.
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if isAdmin();
      // Solo Admin puede crear/modificar resultados.
      allow create, update, delete: if isAdmin(); 
    }
    
    match /peer-reviews/{reviewId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
  }
}
